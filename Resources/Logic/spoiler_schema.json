{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "setting": {
            "type": "object",
            "description": "A nested dictionary of randomizer settings as integers, strings, booleans.",
            "additionalProperties": {
                "anyOf": [
                    { "type": ["integer", "string", "boolean"] },
                    { "$ref": "#/definitions/setting" }
                ]
            }
        },
        "entrance": {
            "type": "object",
            "description": "A connection between two specified entrances. Can be two-way or one-way.",
            "properties": {
                "source": {
                    "type": "string",
                    "description": "The name of the source entrance"
                },
                "destination": {
                    "type": "string",
                    "description": "The name of the destination entrance"
                },
                "one-way": {
                    "type": "boolean",
                    "description": "Whether the entrance is one-way or two-way. Defaults to two-way."
                }
            },
            "required": ["source", "destination"]
        }
    },
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "description": "Metadata for the spoiler, including settings and patch information",
            "properties": {
                "patcher": {
                    "type": "string",
                    "title": "Patcher",
                    "description": "An identifier for the patcher the spoiler is designed for"
                },
                "settings": { "$ref": "#/definitions/setting" }
            }
        },
        "spoiler": {
            "type": "object",
            "properties": {
                "entrances": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/entrance" }
                },
                "items": {
                    "type": "object",
                    "description": "A list of items, with location names as keys and item contents as values",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            }
        }
    }
}